<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.crm.pharmbooks.PharmCRM">

    <!-- To auto-complete the email text field in the login form with the user's emails -->
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.crm.pharmbooks.PharmCRM.SplashScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.crm.pharmbooks.PharmCRM.CustomerDetail" />
        <activity android:name="com.crm.pharmbooks.PharmCRM.MainActivity" />
        <activity android:name="com.crm.pharmbooks.PharmCRM.MedicineData" />
        <activity android:name="com.crm.pharmbooks.PharmCRM.CustomerNameFetch" />
        <activity android:name="com.crm.pharmbooks.PharmCRM.PrescriptionListActivity" />
        <activity android:name="com.crm.pharmbooks.PharmCRM.CustomerPrescription" />
        <activity android:name="com.crm.pharmbooks.PharmCRM.Login"/>

    </application>

</manifest>