<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/dashboard"
        xmlns:tools="http://schemas.android.com/tools"
        tools:context="com.crm.pharmbooks.PharmCRM.DashBoard"
        android:background="#ddd">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/NoOfCustomersToBeRefilled"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:tag="1"
                    android:text="No Of Customers To Be Refilled"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/NoOFCustomersOnboard"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:tag="2"
                    android:text="No Of Customers Onboard"
                    android:textSize="20sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="115dp"
                android:layout_gravity="center">

                <Button
                    android:id="@+id/NoOfRepeatedCustomers"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:tag="3"
                    android:text="No Of Repeated Customers"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/NoOfMedicinesRefilled"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:tag="4"
                    android:text="No of Medicines Refilled"
                    android:textSize="20sp" />

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center">


                <Button
                    android:id="@+id/VisitInfo"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:onClick="clickButton"
                    android:tag="4"
                    android:text="Visitor Information"
                    android:textSize="20sp"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/listHeading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Upcoming Refills:"
                    android:textColor="#000000" />


            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/rel"
                android:layout_height="match_parent">
                <ProgressBar
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/pb"
                    android:layout_centerInParent="true"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal"
                    android:text="Loading"
                    android:layout_below="@id/pb"
                    android:id="@+id/loadingtxt" />
            </RelativeLayout>


                <ExpandableListView
                    android:id="@+id/lvExp"
                    android:layout_height="match_parent"
                    android:layout_width="match_parent"
                    android:choiceMode = "singleChoice"
                    android:listSelector = "@drawable/selector_list_item" />



        </LinearLayout>
    </LinearLayout>